# ==========================================
# 火山云 TOS 对象存储配置
# ==========================================
TOS_ENDPOINT=https://tos-cn-beijing.volces.com
TOS_REGION=cn-beijing
TOS_BUCKET=sora-2

# 火山云访问密钥（在火山引擎控制台获取）
# 控制台地址: https://console.volcengine.com/iam/keymanage/
TOS_ACCESS_KEY=你的AccessKey
TOS_SECRET_KEY=你的SecretKey


# ==========================================
# 数据库配置（PostgreSQL）
# ==========================================
# 数据库连接信息
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soradirector
DB_USER=postgres
DB_PASSWORD=你的数据库密码

# 数据库连接池配置（可选）
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10


# ==========================================
# AI 服务配置
# ==========================================
# 对话模型配置（主要使用的 LLM）
LLM_MODEL_NAME=gemini-3-pro-preview
LLM_API_KEY=你的LLM_API_KEY
LLM_BASE_URL=https://yunwu.ai

# OpenAI API（如果使用 GPT）
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# 或者使用其他大模型服务（如火山方舟、通义千问等）
# 火山方舟大模型
VOLCENGINE_ARK_API_KEY=你的火山方舟API_KEY
VOLCENGINE_ARK_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3

# 视频生成服务配置（Sora）
VIDEO_MODEL_NAME=sora-2
VIDEO_GENERATION_API_KEY=你的视频生成API_KEY
VIDEO_GENERATION_ENDPOINT=https://yunwu.ai


# ==========================================
# 应用配置
# ==========================================
# 服务器配置
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# JWT 密钥（用于用户认证，随机生成一个长字符串）
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# 跨域配置（前端地址，多个用逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO


# ==========================================
# 其他第三方服务配置
# ==========================================
# Redis 缓存（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 邮件服务（可选，用于发送通知）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com


# ==========================================
# 业务配置
# ==========================================
# 每次视频生成消耗的点数
CREDITS_PER_VIDEO=50

# 新用户初始点数
INITIAL_CREDITS=520

# 文件上传限制（MB）
MAX_UPLOAD_SIZE_MB=10
